<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/appleImage"
        android:layout_width="122dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/first" />

    <TextView
        android:id="@+id/titleRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:text="profile"
        app:layout_constraintStart_toEndOf="@+id/appleImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="11dp"
        android:text="this is my profile"
        app:layout_constraintStart_toEndOf="@+id/appleImage"
        app:layout_constraintTop_toBottomOf="@+id/titleRecycler" />

</androidx.constraintlayout.widget.ConstraintLayout>